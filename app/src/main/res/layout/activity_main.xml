<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lihang.ShadowLayout
        android:id="@+id/ShadowLayoutHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:hl_leftShow="false"
        app:hl_rightShow="false"
        app:hl_shadowColor="#2a000000"
        app:hl_shadowLimit="5dp"
        app:hl_topShow="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:text="ShadowLayout万能阴影布局2.0震撼上线"
            android:textColor="#ff0000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </com.lihang.ShadowLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ShadowLayoutHead"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="2.1.8新增功能，更改四个圆角大小"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_shadowColor="#29000000"
                app:hl_shadowLimit="5dp"
                app:hl_cornerRadius_leftTop="0dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="更改左上圆角大小"
                    android:textColor="#000" />

            </com.lihang.ShadowLayout>



            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_shadowColor="#5500bfff"
                app:hl_shadowLimit="10dp"
                app:hl_cornerRadius_leftTop="0dp"
                app:hl_cornerRadius_rightBottom="0dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="更改左上，右下圆角大小"
                    android:textColor="#000" />
            </com.lihang.ShadowLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="2.1.6新增功能，再也不用写shape了"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />


            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_shadowBackColorClicked="#ff0000"
                app:hl_shadowColor="#4D0E5BE8"
                app:hl_shadowLimit="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="点我，selector的pressed样式"
                    android:textColor="#000" />

            </com.lihang.ShadowLayout>


            <com.lihang.ShadowLayout
                android:id="@+id/ShadowLayoutSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_isShowShadow="false"
                app:hl_selectorMode="selected"
                app:hl_shadowBackColor="#00ff00"
                app:hl_shadowBackColorClicked="#F60B0B"
                app:hl_shadowLimit="7dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="点我，selector的selected样式"
                    android:textColor="#000" />

            </com.lihang.ShadowLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#eeeeee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="基本介绍"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />


            <com.lihang.ShadowLayout
                android:id="@+id/mShadowLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="10dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_shadowColor="#2a000000"
                app:hl_shadowLimit="5dp">

                <TextView
                    android:id="@+id/txt_test"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="圆角"
                    android:textColor="#000" />
            </com.lihang.ShadowLayout>

            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_shadowColor="#29000000"
                app:hl_shadowLimit="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="完全圆形圆角"
                    android:textColor="#000" />

            </com.lihang.ShadowLayout>


            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="5dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_shadowColor="#2aff0000"
                app:hl_shadowLimit="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="红色阴影"
                    android:textColor="#000" />

            </com.lihang.ShadowLayout>


            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_shadowColor="#2a0d00ff"
                app:hl_shadowLimit="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="随便改变阴影颜色,颜色透明度更改阴影清晰度"
                    android:textColor="#000" />
            </com.lihang.ShadowLayout>


            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="0dp"
                app:hl_dy="0dp"
                app:hl_shadowColor="#5500ff11"
                app:hl_shadowLimit="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="阴影扩散区域改变"
                    android:textColor="#000" />
            </com.lihang.ShadowLayout>


            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="5dp"
                app:hl_dy="0dp"
                app:hl_shadowColor="#5500bfff"
                app:hl_shadowLimit="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="阴影x轴偏移"
                    android:textColor="#000" />
            </com.lihang.ShadowLayout>


            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_dx="0dp"
                app:hl_dy="5dp"
                app:hl_shadowColor="#55ff00d5"
                app:hl_shadowLimit="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="阴影y轴偏移"
                    android:textColor="#000" />
            </com.lihang.ShadowLayout>


            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:hl_cornerRadius="18dp"
                app:hl_leftShow="false"
                app:hl_shadowColor="#55ff8c00"
                app:hl_shadowLimit="10dp"
                app:hl_topShow="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="不偏移xy,让上和左阴影不可见(如titleBar)"
                    android:textColor="#000" />
            </com.lihang.ShadowLayout>
        </LinearLayout>

    </ScrollView>


    <com.lihang.ShadowLayout
        android:id="@+id/ShadowLayoutIntent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:hl_cornerRadius="60dp"
        app:hl_shadowColor="#80F01818"
        app:hl_shadowBackColor="#59F01818"
        app:hl_shadowBackColorClicked="#29F01818"
        app:hl_shadowLimit="25dp">

        <TextView
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="动态设置阴影"
            android:textColor="#fff" />
    </com.lihang.ShadowLayout>


</RelativeLayout>